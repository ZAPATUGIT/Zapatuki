
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<head>
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>
<h2>Cart</h2>

@if (Session["UserLogged"] != null)
{
    <div class="alert alert-success"> Successful Login </div>
    <div class="alert alert-danger"> Agrega las cosas del carrito papito </div>
}
else
{
    <div class="alert alert-danger"> You are not logged in to access the cart </div>
}
<div class="btn">
    <button class="button1">@Html.ActionLink("Back to Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</button>
</div>
<div class="btn">
    <form action="@Url.Action("Logout", "Login")" method="post">
        <button type="submit" class="button1">Logout</button>
    </form>
</div>
