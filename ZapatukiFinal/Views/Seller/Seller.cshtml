@model ZapatukiFinal.Dtos.ViewModels.UserViewModel

@{
    ViewBag.Title = "Administrator";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<head>
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>
<p id="heading">Seller</p>

@if (Session["UserLogged"] == null)
{
    <div class="alert alert-danger">You are not logged</div>
}
else
{
    if (Model.User != null)
    {
        if (Model.User.IdRole == 2)
        {
            <div class="alert alert-success">Successful Login Seller @Model.User.FirstName</div>
            <div class="btn">
                <button class="button1">@Html.ActionLink("Product Registration", "ProductRegister", "ProductRegister", new { area = "" }, new { @class = "nav-link" })</button>
            </div>

            <div class="btn">
                <button class="button1">@Html.ActionLink("Product Update", "ProductSearch", "ProductUpdate", new { area = "" }, new { @class = "nav-link" })</button>
            </div>
        }
        else
        {
            <div class="alert alert-danger">You don´t have seller permissions to access</div>
        }
    }
}

<div class="btn">
    <button class="button1">@Html.ActionLink("Back to Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</button>
</div>
<div class="btn">
    <form action="@Url.Action("Logout", "Login")" method="post">
        <button type="submit" class="button1">Logout</button>
    </form>
</div>

